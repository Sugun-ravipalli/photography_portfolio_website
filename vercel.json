{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "https://sugunstories-ruby.vercel.app",
      "permanent": true
    },
    {
      "source": "/contact",
      "destination": "https://sugunstories-ruby.vercel.app/contact",
      "permanent": true
    },
    {
      "source": "/gallery",
      "destination": "https://sugunstories-ruby.vercel.app/gallery",
      "permanent": true
    },
    {
      "source": "/admin",
      "destination": "https://sugunstories-ruby.vercel.app/admin",
      "permanent": true
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 